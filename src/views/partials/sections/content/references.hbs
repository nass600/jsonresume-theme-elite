{{#if resume.references.length}}
    <section class="section-references">
        {{> components/title icon='thumbs-up' title='References'}}

        {{#each resume.references}}
            <div class="card">
                <div class="card-block">
                    <h3 class="card-title">
                        {{#if name}}
                            {{name}}
                        {{/if}}
                    </h3>
                    {{#if reference}}
                        <div class="card-text">
                            {{reference}}
                        </div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </section>
{{/if}}
