{{#if resume.certifications.length}}
    <section class="section-certifications">
        {{> components/title icon='certification' title='Certifications'}}

        {{#each resume.certifications}}
            <div class="card">
                {{#if logo}}
                    <div class="card-aside">
                        <div class="card-image">
                            <img src="{{logo}}" alt="{{awarder}}">
                        </div>
                    </div>
                {{/if}}
                <div class="card-block">
                    {{#if title}}
                        <div class="card-header">
                            <h3 class="card-title">
                                {{title}}
                                {{#if awarder}}
                                    <span class="card-subtitle text-secondary">{{awarder}}</span>
                                {{/if}}
                            </h3>
                            {{#if date}}
                                <div class="card-caption text-secondary">
                                    <span class="card-text card-dates">
                                        <span class="date-range">
                                            {{formatDate date}}
                                        </span>
                                        {{#if ../themeConfig.certificationDateSince}}
                                            <span class="duration">
                                                ({{dateAgo date}})
                                            </span>
                                        {{/if}}
                                    </span>
                                </div>
                            {{/if}}
                        </div>
                    {{/if}}
                    {{#if summary}}
                        <div class="card-body">{{{summary}}}</div>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </section>
{{/if}}
