{{#if resume.volunteer.length}}
    <section class="section-volunteer">
        {{> components/title icon='hand' title='Volunteer'}}

        {{#each resume.volunteer}}
            <div class="card">
                {{#if logo}}
                    <div class="card-aside">
                        <div class="card-image">
                            <img src="{{logo}}" alt="{{organization}}">
                        </div>
                    </div>
                {{/if}}
                <div class="card-block">
                    {{#if position}}
                        <div class="card-header">
                            <h3 class="card-title">
                                {{position}}
                                {{#if organization}}
                                    <span class="card-subtitle text-secondary">{{organization}}</span>
                                {{/if}}
                            </h3>
                            {{#if startDate}}
                                <div class="card-caption text-secondary">
                                    <span class="card-text card-dates">
                                        <span class="date-range">
                                            {{formatDate startDate}} - {{formatDate endDate}}
                                        </span>
                                        {{#if ../themeConfig.volunteerDuration}}
                                            <span class="duration">
                                                ({{dateDiff startDate endDate}})
                                            </span>
                                        {{/if}}
                                    </span>
                                    {{#unless endDate}}
                                        <span class="badge badge-outline-success">current</span>
                                    {{/unless}}
                                </div>
                            {{/if}}
                        </div>
                    {{/if}}
                    {{#if summary}}
                        <div class="card-body">{{{summary}}}</div>
                    {{/if}}
                    {{#or highlights.length website}}
                        <div class="card-footer text-muted">
                            {{#if website.length}}
                                <a class="card-link icon-item text-secondary" href="{{website}}">
                                    <svg class="text-primary">
                                        <use xlink:href="#link"></use>
                                    </svg>
                                    <span>{{website}}</span>
                                </a>
                            {{/if}}
                            {{#if highlights.length}}
                                <ul class="card-highlights">
                                    {{#each highlights}}
                                        <li class="badge badge-outline-secondary">
                                            {{this}}
                                        </li>
                                    {{/each}}
                                </ul>
                            {{/if}}
                        </div>
                    {{/or}}
                </div>
            </div>
        {{/each}}
    </section>
{{/if}}
