{{#if resume.basics}}
    <section class="section-contact">
        {{> components/title icon='web' title='Contact'}}
        <div class="card">
            <div class="card-block">
                <div class="card-body">
                    <ul>
                        {{#if resume.basics.email}}
                            <li class="icon-item clearfix">
                                <svg class="text-primary"><use xlink:href="#envelope"></use></svg>
                                <span>{{resume.basics.email}}</span>
                            </li>
                        {{/if}}
                        {{#if resume.basics.phone}}
                            <li class="icon-item clearfix">
                                <svg class="text-primary"><use xlink:href="#phone"></use></svg>
                                <a href="tel:{{resume.basics.phone}}">
                                    {{resume.basics.phone}}
                                </a>
                            </li>
                        {{/if}}
                        {{#if resume.basics.website}}
                            <li class="icon-item clearfix">
                                <svg class="text-primary"><use xlink:href="#link"></use></svg>
                                <a href="{{resume.basics.website}}">
                                    {{removeSchema resume.basics.website}}
                                </a>
                            </li>
                        {{/if}}
                        {{#if resume.basics.location}}
                            <li class="icon-item clearfix">
                                <svg class="text-primary"><use xlink:href="#map-marker"></use></svg>
                                <span>
                                {{resume.basics.location.address}}
                                    {{resume.basics.location.postalCode}}
                                    {{resume.basics.location.city}}
                                    {{resume.basics.location.region}}
                                    {{resume.basics.location.countryCode}}
                                </span>
                            </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
    </section>
{{/if}}
